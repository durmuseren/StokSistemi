@model MvcStok.Models.Entity.TBLKATEGORILER
@{
    ViewBag.Title = "KategoriGetir"; //kategori idleri ve adı gelsin diye yukarıda model tanımlıyoruz
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

@using (Html.BeginForm("Guncelle","Kategori","FormMethod.Post"))//güncellleyi çalıştırcak.Güncelle kategoride.ne zaman çalışcak post olduğunda yani birşey gönderdiğimizde
{
    <div class="form-group">
         @Html.LabelFor(m=>m.KATEGORIID)
         @Html.TextBoxFor(m=>m.KATEGORIID,new  { @class="form-control"}) <!--newle başlayan tasarımsal birşey -->
        <br />
         @Html.LabelFor(m=>m.KATEGORIAD)
        @Html.TextBoxFor(m=>m.KATEGORIAD, new { @class = "form-control" })
         </div> 
         <div>
             <button class="btn btn-warning">Kategori Güncelle</button>
         </div>
}